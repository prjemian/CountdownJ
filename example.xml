<TalkConfiguration programName="CountdownJ" version="1.0j"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://jemian.org/CountdownJ/1.0j  schema.xsd">
  <!--
CountdownJ (1.0j)
CountdownJ - a timer for presentations
(c) 2010 Pete R. Jemian
by: Pete R. Jemian <prjemian@gmail.com>

See the LICENSE file (GPLv3) included in the distribution for details.
-->
  <timestamp>2010-09-06T10:29:05</timestamp>
  <talk id="basic">
    <seconds discussion="300" overtime="30"/>
    <audible>true</audible>
    <!--messages should be brief-->
    <message name="pretalk">coming up next</message>
    <message name="presentation">listen</message>
    <message name="discussion">questions?</message>
    <message name="overtime">time is up</message>
    <message name="paused">... waiting ...</message>
  </talk>
  <talk id="preset1" name="Keynote">
    <!--name is used for the tab to be selected-->
    <seconds discussion="600" overtime="999999" presentation="3600"/>
    <audible>false</audible>
    <!--messages should be brief-->
    <message name="pretalk">Keynote</message>
    <message name="presentation">Keynote</message>
    <message name="discussion">closing</message>
    <message name="overtime">Overtime</message>
    <message name="paused">Paused</message>
  </talk>
  <talk id="preset2" name="Plenary">
    <!--name is used for the tab to be selected-->
    <seconds discussion="600" overtime="60" presentation="2700"/>
    <audible>true</audible>
    <!--messages should be brief-->
    <message name="pretalk">Plenary</message>
    <message name="presentation">Plenary</message>
    <message name="discussion">closing</message>
    <message name="overtime">Overtime</message>
    <message name="paused">Paused</message>
  </talk>
  <talk id="preset3" name="15:00">
    <!--name is used for the tab to be selected-->
    <seconds discussion="300" overtime="30" presentation="900"/>
    <audible>true</audible>
    <!--messages should be brief-->
    <message name="pretalk">15:00 talk next</message>
    <message name="presentation">Presentation</message>
    <message name="discussion">5:00 for discussion</message>
    <message name="overtime">Overtime</message>
    <message name="paused">Paused</message>
  </talk>
  <talk id="preset4" name="5:00">
    <!--name is used for the tab to be selected-->
    <seconds discussion="60" overtime="10" presentation="300"/>
    <audible>true</audible>
    <!--messages should be brief-->
    <message name="pretalk">5:00 talk</message>
    <message name="presentation">Presentation</message>
    <message name="discussion">1:00 warning</message>
    <message name="overtime">Overtime</message>
    <message name="paused">Paused</message>
  </talk>
</TalkConfiguration>
